{
  "manifest_version": 3,
  "name": "Playlist Duration Calculator",
  "version": "1.0",
  "description": "Calculate the total duration of videos in a playlist.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["https://www.youtube.com/*"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
